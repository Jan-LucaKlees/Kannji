<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz_yes_no"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.janlucaklees.kannji.views.quizzes.QuizYesNo">

    <TextView
        android:id="@+id/activity_quiz_yes_no_question_field"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="120sp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/activity_quiz_yes_no_given_answer"
        android:layout_width="match_parent"
        android:textSize="70sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_height="150dp"/>

    <Button
        android:id="@+id/activity_quiz_yes_no_button_yes"
        android:text="@string/yes"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:onClick="yesButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/activity_quiz_yes_no_combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/activity_quiz_yes_no_button_yes"
        android:layout_alignBottom="@+id/activity_quiz_yes_no_button_yes"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/activity_quiz_yes_no_button_no"
        android:text="@string/no"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:onClick="noButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
